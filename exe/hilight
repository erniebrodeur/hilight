#!/usr/bin/env ruby

require 'json'
require "hilight"
require 'open3'
require 'optparse'

include Hilight #rubocop:disable all
Quilts.load_quilts_from_gem

### Parsing
options = {}
parser = OptionParser.new do |opts|
  opts.banner = "Usage: hilight <cmd>"

  opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
    options[:verbose] = v
  end
end

def split_opts(array)
  cmd_start_index = array.find_index { |e| !e.start_with? "-" }
  return [[], array] if !cmd_start_index || cmd_start_index.zero?

  [array[0..cmd_start_index - 1], array[cmd_start_index..-1]]
end

arguments, cmd = split_opts ARGV
parser.parse arguments

### Execution
if cmd.any?
  cmd_string = cmd.join(' ')

  quilt = Hilight::Quilts.match_quilt cmd_string

  output, process = Open3.capture2e(cmd_string)

  if quilt
    print quilt.transform output
  else
    print output
  end

  exit process.exitstatus
else
  quilt = Hilight::Quilts.collection.first
  $stdout << quilt.transform($stdin.readline) until $stdin.eof?
end
